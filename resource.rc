#include "resource.h"
#include <windows.h>

/**
	Menu
*/
ID_MENU MENU DISCARDABLE
BEGIN
	POPUP "&Game"
	BEGIN
		MENUITEM "&New game (Ctrl+N)",			IDM_GAME_NEW
		MENUITEM "&Join game",					IDM_GAME_JOIN, GRAYED
		MENUITEM "&Save game (Ctrl+S)",			IDM_GAME_SAVE, GRAYED
		MENUITEM "&Resume game (Ctrl+L)",		IDM_GAME_RESUME, GRAYED
		MENUITEM SEPARATOR
		MENUITEM "E&xit (Ctrl+Q)",				IDM_GAME_EXIT
	END

	POPUP "&Option"
	BEGIN
		MENUITEM "&Random (Ctrl+X)",		IDM_OPTION_RANDOM
		MENUITEM "&Undo (Ctrl+Z)",			IDM_OPTION_UNDO, GRAYED
		MENUITEM "&High score",				IDM_OPTION_HIGHSCORE
		MENUITEM SEPARATOR
		MENUITEM "&Game config",			IDM_OPTION_GAME_CONFIG
		MENUITEM "&Multiplayer config",		IDM_OPTION_MULTI_CONFIG, GRAYED
	END

	POPUP "&Help"
	BEGIN
		MENUITEM "&Help (Ctrl+H)",			IDM_HELP_HELP
		MENUITEM "&About...",				IDM_HELP_ABOUT
	END
END
