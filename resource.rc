/**
	New game dialog
*/
GAME_NEW DIALOGEX DISCARDABLE 30,30,140,135
STYLE DS_MODALFRAME|WS_POPUP|WS_CAPTION|WS_SYSMENU
CAPTION "New game"
FONT 9, "Tahoma"
BEGIN
	GROUPBOX		"",IDC_MULTI_GROUP,5,30,130,45
	RADIOBUTTON		"&Single mode",IDC_SINGLE,10,10,100,9
	RADIOBUTTON		"&Multiplayer mode",IDC_MULTI,10,30,65,9
	RADIOBUTTON		"&LAN game",IDC_MULTI_LAN,30,45,45,9
	RADIOBUTTON		"&Internet game",IDC_MULTI_INTERNET,30,60,60,9
	CTEXT			"",IDC_MODE_HINT,10,85,120,20,ES_READONLY,ES_MULTILINE,ES_CENTER
	DEFPUSHBUTTON	"&New game",IDC_NEWGAME,50,110,40,15
END

/**
	Game config dialog
*/
