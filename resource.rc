/**
	Instruction dialog
*/
INSTRUCTIONS DIALOG DISCARDABLE	30,30,300,130
STYLE DS_MODALFRAME|WS_POPUP|WS_CAPTION|WS_SYSMENU
CAPTION "Game instructions"
FONT 9, "Tahoma"
BEGIN
	DEFPUSHBUTTON	"&OK",IDOK,135,110,30,15
	CTEXT			"Game instructions",IDC_STATIC,0,10,300,14,SS_NOPREFIX
	LTEXT			"1. Game contains 9x9 squares, divided in 27 columns of 1x3",IDC_STATIC,20,30,260,9,SS_NOPREFIX
	LTEXT			"2. Each turn, player will get 3 interger numbers in range of [0,9] randomly",IDC_STATIC,20,40,260,9,SS_NOPREFIX
	LTEXT			"3. Player has to put 3 numbers respectively in a blank column",IDC_STATIC,20,50,260,9,SS_NOPREFIX
	LTEXT			"4. Game ends after 27 turns, is scored by rules:",IDC_STATIC,20,60,260,9,SS_NOPREFIX
	LTEXT			"- Only sequences of same numbers in a row, column or diagon line are scored",IDC_STATIC,30,70,250,9,SS_NOPREFIX
	LTEXT			"- Score of each sequence is total points of all numbers",IDC_STATIC,30,80,250,9,SS_NOPREFIX
	LTEXT			"- Game score is total score of all sequences",IDC_STATIC,30,90,250,9,SS_NOPREFIX
END

